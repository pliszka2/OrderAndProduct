{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "testPathIgnorePatterns": ["/dist/"],
  "testRegex": ".test.ts$",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "coverage",
  "testEnvironment": "node"
}
